<resources>

    <declare-styleable name="Theme">
        <attr format="color" name="colorDivider"/>
        <attr format="color" name="colorShadow"/>
        <attr format="color" name="colorTextPrimary"/>
        <attr format="color" name="colorDrawablePrimary"/>
        <attr format="color" name="colorPure"/>
        <attr format="color" name="colorPureInverse"/>

        <attr format="boolean" name="dark"/>
        
        <attr format="reference" name="ic_visibility_x24"/>
        <attr format="reference" name="ic_comment_multiple_outline_x16"/>
    </declare-styleable>

    <declare-styleable name="MonoRecyclerView">
        <attr name="space" format="dimension"/>
        <attr name="spaceLeft" format="dimension"/>
        <attr name="spaceRight" format="dimension"/>
        <attr name="spaceTop" format="dimension"/>
        <attr name="spaceBottom" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ProgressView">
        <attr name="color"/>
        <attr name="indeterminate" format="boolean"/>
        <attr name="progress" format="float"/>
    </declare-styleable>

    <declare-styleable name="LoadImageView">
        <attr name="retryType">
            <enum name="none" value="0" />
            <enum name="click" value="1" />
            <enum name="longClick" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FixedAspectImageView">
        <attr name="aspect" format="float"/>
    </declare-styleable>

</resources>
