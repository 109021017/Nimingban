        <item name="colorPureInverse">@color/pure_inverse_light</item>
        <item name="colorRoundSide">@color/round_side_light</item>
        <item name="colorKeyboardBackground">@color/keyboard_background_light</item>

        <item name="preferenceHeaderTitleColor">@color/preference_header_title_light</item>
        <item name="itemForumDrawerText">@color/item_forum_drawer_text_light</item>
        <item name="itemForumDrawerBackground">@drawable/item_forum_drawer_background_light</item>

        <item name="dark">false</item>

        <item name="android:textColorPrimary">@color/primary_text_light</item>
        <item name="android:textColorSecondary">@color/secondary_text_light</item>
        <item name="android:textColorTertiary">@color/secondary_text_light</item>
    </style>

